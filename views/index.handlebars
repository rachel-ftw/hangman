<div class="content">
  <div class="hero-head">
    <h1>HANGMAN</h1>
    <p>you have 6 guesses to save a man's life... can you do it?</p>
    <p>You've won {{winStreak}} games in a row.</p>
  </div>
  <div class="game">
    <div class="gameplay box home-box"">
      <div class="gameplay-letters">
        <div class="each-letter">
          <div class="blank-letters"> 
            {{#each hangmanArray}}
            <div class="hangman-letters">{{this}}</div>
            {{/each}}
          </div>
          <div class="blank-letters"> 
            {{#each currentWord}}
            <div class="blankletter-lines"></div>
            {{/each}}
          </div>
        </div>
      </div>
      <div>
        <div id="game-guess-form" class="control">
          <form id="hangman-guess-form" method="post" action="/checkAnswer">
            <input class="input submission-form" name="guess" placeholder="Guess a Letter" type="text"> </input>
            <input id="check-btn" type="submit" value="Check Guess" class="button is-primary">
            </input>
          </form>
        </div>
      </div>
    </div>
    <div class="gameStatus-sidebar">
      <h3>You've guessed {{incorrectGuessCount}} times.</h3>
      <p>Incorrect Guesses:</p>
      <div class="incorrectGuessedLetters">
        {{#each incorrectGuessedLetters}}
        <div class="incorrectletters">{{this}}</div>
        {{/each}}
      </div>
    </div>
  </div>
  <div>currentWord: {{currentWord}}</div>
  <div>correct guessed letters: {{correctGuessedLetters}}</div>
  <div>incorrect guessed letters: {{incorrectGuessedLetters}}</div>
  {{#if lostGame}}
    <div class="modal is-active">
  {{else}}
    <div class="modal">
  {{/if}}
      <div class="modal-background"></div>
        <div class="modal-card">
          <header class="modal-card-head">
            <p class="modal-card-title">Whomp whomp, you lost!</p>
          </header>
          <section class="modal-card-body">
            <img src="{{lostGIF}}">
          </section>
          <footer class="modal-card-foot">
            <a class="button is-success" href="/newgame">Start Over</a>
          </footer>
        </div>
      </div>
    </div>
  

</div>


